SetChartOptions(0,0,chartGrid30|chartGrid70);
Period = Param("RSI Period",14,6,30,1);
smooth1 = Param("First Smoothing period",50,40,100,1);
smooth2 = Param("Second Smoothing Period",9,2,15,1);
trsi  = RSI(Period);
x = MA(trsi, smooth1)-trsi; 
y  = MA(50 - x, smooth2) ; 
z = MA(y,9); //signal



mycolor = IIf(y >= 50 , colorLime, colorRed);
Plot(y,"Smoothed RSI",mycolor,1);
Plot(z,"Signal",colorOrange,1);